public void acaoBotaoCancelar(){
        jButtonCancelar.addActionListener(new ActionListener() {
            @Override
                public void actionPerformed(ActionEvent e){
        jCheckBoxVivo.setSelected(false);
        jCheckBoxMorto.setSelected(false);
        jCheckBoxRacao.setSelected(false);
        jCheckBoxComeAlmoco.setSelected(false);
        jCheckBoxAdestrado.setSelected(false);
        jCheckBoxVacinado.setSelected(false);
        jCheckBoxPedigree.setSelected(false);
        
       }
    });
        
    }

