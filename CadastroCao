public void gerarTela(){
    jFrame = new JFrame();
    jFrame.setSize(601,415);
    jFrame.setLayout(null);
    jFrame.setLocationRelativeTo(null);
    jFrame.setDefaultCloseOperation(EXIT_ON_CLOSE);
}

public void adicionarComponentes(){
    jFrame.add(jTextFieldNome);
    jFrame.add(jTextFieldIdade);
    //jFrame.add(jTextFieldRaca);
    jFrame.add(jTextFieldApelido);
    jFrame.add(jTextFieldPreco);
    jFrame.add(jTextFieldDescricao);
    jFrame.add(jCheckBoxVivo);
    jFrame.add(jCheckBoxMorto);
    jFrame.add(jCheckBoxRacao);
    jFrame.add(jCheckBoxComeAlmoco);
    jFrame.add(jCheckBoxAdestrado);
    jFrame.add(jCheckBoxVacinado);
    jFrame.add(jCheckBoxPedigree);
    jFrame.add(jButtonSalvar);
    jFrame.add(jButtonCancelar);
}

public void instanciarComponentes(){
    jTextFieldNome = new JTextField("Nome:");
    jTextFieldIdade = new JTextField("Idade");
//    jTextFieldRaca = new JTextField("Raça:");
    jTextFieldApelido = new JTextField("Apelido:");
    jTextFieldPreco = new JTextField("Preço:");
    jTextFieldDescricao = new JTextField("Preço:");
    jCheckBoxVivo = new JCheckBox("Vivo");
    jCheckBoxMorto = new JCheckBox("Morto");
    jCheckBoxRacao = new JCheckBox("Ração");
    jCheckBoxComeAlmoco = new JCheckBox("Come almoços, jantaa");
    jCheckBoxAdestrado = new JCheckBox("Adestrado");
    jCheckBoxVacinado = new JCheckBox("Vacinado");
    jCheckBoxPedigree = new JCheckBox("Tem pedigree");
    jButtonSalvar = new JButton("Salvar");
    jButtonCancelar = new JButton("Cancelar");
}

